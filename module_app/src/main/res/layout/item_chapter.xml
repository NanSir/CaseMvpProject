<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:stackHeaderHeight="160dp">

    <RelativeLayout
        android:id="@+id/frame_chapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent">


        <LinearLayout
            android:id="@+id/chapter_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/chapter_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="章节"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/chapter_read"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:background="@drawable/shape_chapter_car_bg"
                android:text="阅读"
                android:textColor="@android:color/white" />

        </LinearLayout>


        <ImageView
            android:id="@+id/chapter_cover"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_below="@+id/chapter_layout"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/chapter_explain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chapter_cover"
            android:layout_margin="8dp"
            android:ellipsize="end"
            android:text="杀手阎婆血洗黄家堡，八十一口被一夜之间杀光，黄家不传密宝易容术被其盗走。 从此江湖再无阎婆踪迹。黄家剩得"
            android:textColor="@android:color/white"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/chapter_refresh_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/chapter_explain"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:text="2016-09-06"
            android:textColor="@android:color/white" />
    </RelativeLayout>


</android.support.v7.widget.CardView>