<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/video_pic"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_fap" />

        <TextView
            android:id="@+id/video_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/video_pic"
            android:layout_alignRight="@+id/video_pic"
            android:layout_margin="5dp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/video_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/video_pic"
            android:padding="5dp"
            android:textColor="@android:color/black"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/video_airTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/video_title"
            android:layout_toRightOf="@+id/video_pic"
            android:paddingLeft="8dp" />


        <TextView
            android:id="@+id/video_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/video_airTime"
            android:layout_toRightOf="@+id/video_pic"
            android:ellipsize="end"
            android:lines="3"
            android:paddingLeft="5dp"
            android:textSize="14sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>