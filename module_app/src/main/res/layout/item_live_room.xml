<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/live_poster"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_bg" />

    <TextView
        android:id="@+id/live_anchor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/live_poster"
        android:layout_margin="5dp"
        android:text="主播"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/live_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/live_poster"
        android:lines="1"
        android:text="直播标题" />

    <TextView
        android:id="@+id/live_audience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/live_poster"
        android:layout_margin="5dp"
        android:text="12.2万"
        android:textColor="@android:color/white" />



</RelativeLayout>